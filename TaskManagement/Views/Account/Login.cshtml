@model TaskManagement.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login Form</h1>  <hr />  
<div class="row">  
    <div class="col-md-9"> 
         <form method="post" asp-controller="Account" asp-action="Login">   
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">  
                <label asp-for="Email" class="control-label"></label>  
                <input asp-for="Email" class="form-control" />  
                <span asp-validation-for="Email" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Password" class="control-label"></label>  
                <input asp-for="Password" class="form-control" type="password"/>  
                <span asp-validation-for="Password" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                 <input type="submit" value="Login" class="btn btn-success" /> 
                 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                 <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>  
                 <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Back</a>  
            </div>  
             <b>@TempData["ErrorMessage"]</b>
        </form>  
            </div>  
        </div>  
        
  
   @*Client Side validation*@
    @section Scripts{
        @{ <partial name="_ValidationScriptsPartial" /> }
        }